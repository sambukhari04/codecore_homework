
<div class="container-flex justify-content-center row">
  <div class="card">
    <img src="http://www.pbs.org/parents/adventures-in-learning/files/2016/06/teaching-kids-how-to-say-hello-in-different-languages.jpg">
    <h1><%= @post.title %></h1>
    <p><%= @post.body %></p>



    <p><strong>Created At:</strong> <%= @post.created_at %></p>


    <% if user_signed_in? && can?(:manage, @post) %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", post_path(@post), method: :delete %>
    <% end %>
  </div>
</div>

<h2>Comments</h2>

<%= form_for [@post, @comment] do |f| %>
  <% if @comment.errors.present? %>
    <p>
      <%= @comment.errors.full_messages.join(', ') %>
    </p>
  <% end %>
  <div>
    <%= f.text_area :body %>
  </div>
  <%= f.submit(value = 'Comment') %>
<% end %>

<div class="comment-list">
  <% @comments.each do |comment| %>
    <div class="comment-list-item">
      <p><%= comment.body %></p>
      <p>By <%= comment.user&.full_name %></p>
      <p><strong>Created At:</strong> <%= time_ago_in_words(comment.created_at) %> ago</p>
      <% if can?(:destroy, comment) %>
        <%= link_to(
          'Delete',
          post_comment_path(@post, comment),
          data: {confirm: 'Are you sure?'},
          method: :delete
        ) %>
      <% end %>
    </div>
  <% end %>
</div>
