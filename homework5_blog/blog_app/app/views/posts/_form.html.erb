<div class="container-fluid">
  <%= form_for @post do |form| %>
    <% if @post.errors.any? %>
      <p>
        <%= @post.errors.full_messages.join(', ') %>
      </p>
    <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>


  <%= form.submit(value="Blog") %>
<% end %>
</div>
