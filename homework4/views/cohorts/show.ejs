
<%- include('../partials/header') %>

<div class="container-fluid">

  <div class="card">
    <h3 class="card-header"><%= cohort.name %></h3>
    <div class="card-body">
      <h4 class="card-title">Team Members</h4>
      <p class="card-text"><%= cohort.members%></p>

      <hr>
      <form action="/cohorts/<%= cohort.id %>" method="GET" >
        <label>Method</label>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input"
            type="radio"
            name="method"
            value="teamcount">
            Team Count
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <input
            class="form-check-input"
            type="radio"
            name="method"
            value="perteam">
            Number Per Team
          </label>
        </div>

        <div>
          <p>Quantity</p>
          <input
          type="number"
          name="quantity"
          value=""
          class="col-12 rounded">
        </label>
        </div>
      </div>


      <input
      type="submit"
      value="Assign Teams"
      class="btn btn-primary">
    </div>
  </form>
</div>


<%- include('../partials/footer') %>
