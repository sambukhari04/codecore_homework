<%- include('../partials/header') %>

<div class="container-fluid">

  <section class="random-list row justify-content-center">

    <div class="col-sm-8">
      <form
        class="d-flex flex-column"
        action="/cohorts"
        enctype="multipart/form-data"
        method='POST'
      >
        <div class="form-group">
          <input
            class="form-control"
            name="name"
            placeholder="Username"
            type="text"
          />
        </div>

        <div class="form-group">
          <input
            class="form-control"
            name="photo"
            type="file"
          />
        </div>

        <div class="form-group">
          <textarea
            class="form-control"
            rows='5'
            name='members'
            placeholder="Who's on your mind?"
          ></textarea>
        </div>
        <input
          class="btn btn-outline-primary align-self-end"
          type='submit'
          value='Submit'
        />
      </form>
    </div>


</section>

</div>

<%- include('../partials/footer') %>
